			<li class="btn btn-primary" ng-model="$parent.path" ng-repeat='menuItem in mainMenu' btn-radio="'{{menuItem[0]}}'">{{menuItem[1]}}</li>
		</ul>		
		<div ng-view></div>
	footer
	
	<script src='../js/jquery-2.1.4.min.js'></script>
	<script src='../js/lib/angular/angular.js'></script>

	<script src='../js/admin.js'></script>
