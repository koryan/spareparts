html
	head
		meta(charset='utf8')
		title Spareparts admin
		link(rel='stylesheet', href='../css/app.css')
		link(rel='stylesheet', href='../css/bootstrap.min.css')
		base(href='/admin/')
body(ng-app="adminApp")
	loader
		img(src="../images/loader.png")
